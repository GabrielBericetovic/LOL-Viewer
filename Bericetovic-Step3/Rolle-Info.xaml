        <Image x:Name="Rolle_Image_Icon" Source="images/Support.png" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="348,33,0,0"/>
        <Button x:Name="Infoback" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="348,33,0,0" Height="100" Opacity="0" Click="Infoback_Click"/>

        <TextBlock x:Name="Rolle_Info_Text" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,138,0,0" Height="271" Width="772" Foreground="White" HorizontalAlignment="Left" FontSize="18"/>

    </Grid>
</Window>
